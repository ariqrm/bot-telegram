{
  "name": "ariqrm_bot",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "cu": "npx npm-check-updates",
    "next:upgrade:patch": "npx @next/codemod upgrade patch",
    "next:upgrade:minor": "npx @next/codemod upgrade minor",
    "next:upgrade:major": "npx @next/codemod upgrade major",
    "pretty:all": "npx prettier 'src/**/*.{ts,tsx,js,jsx}' --write"
  },
  "dependencies": {
    "grammy": "^1.26.1",
    "next": "16.1.1",
    "react": "19.2.3",
    "react-dom": "19.2.3"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "19.2.7",
    "@types/react-dom": "19.2.3",
    "eslint": "^9.39.2",
    "eslint-config-next": "16.1.1",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "typescript": "^5"
  },
  "prettier": {
    "semi": false,
    "tabWidth": 2,
    "bracketSpacing": false,
    "bracketSameLine": false,
    "arrowParens": "avoid",
    "singleQuote": true
  },
  "overrides": {
    "@types/react": "19.2.7",
    "@types/react-dom": "19.2.3"
  }
}
